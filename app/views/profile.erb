<%= erb :_nav, :layout => false %>
<%= erb :_weather, :layout => false %>

<main>
  <h1>Profile</h1>
  <div id="contact">
    <h2><%= @current_user.username %></h2>
    <p><%= @current_user.email %></p>
    <p><%= @current_user.zipcode %></p>
  </div>
  <div id="user_dogs">
    <h2>Your Dogs</h2>
    <div>
      <% @current_user.dogs.sort.each do |dog| %>
      <div class="dog_info">
        <ul>
          <li><img src="<%=  dog.image %>" /></li>
          <li>Name: <%=  dog.name %></li>
          <li>Breed: <%=  dog.breed %></li>
          <li>Size: <%=  dog.size %></li>
          <li>Description: <%=  dog.description %></li>
        </ul>
      </div>
      <% end %>
    </ul>
  </div>
  <div id="add_dogs">
    <button id="add_dog_button">Add a Dog</button>
    <%= erb :_dogs_new, :layout => false  %>
  </div>
</main>
