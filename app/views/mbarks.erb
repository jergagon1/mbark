<%= erb :_nav, :layout => false %>
<main>
  <h1>mBarks</h1>
  <h2>my mBarks</h2>
  <div id="user_mbark_list">
    <% @current_user.events.each do |event| %>
      <ul>
        <li><%= event.date %></li>
        <li><%= event.time %></li>
        <li><%= event.street_address %></li>
        <li><%= event.city %></li>
        <li><%= event.state %></li>
        <li><%= event.zip %></li>
        <li><%= event.description %></li>
      </ul>
    <% end %>
  </div>
  <h2>all mBarks</h2>
<div id="all_mbark_list">
    <% Event.all.each do |event| %>
      <ul>
        <li><%= event.date %></li>
        <li><%= event.time %></li>
        <li><%= event.street_address %></li>
        <li><%= event.city %></li>
        <li><%= event.state %></li>
        <li><%= event.zip %></li>
        <li><%= event.description %></li>
      </ul>
    <% end %>
  </div>

</main>

